<!DOCTYPE html>
<html lang="pt-BR">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="/styles/room.css">
   <script src="/scripts/room.js" defer></script>
   <%- include('parts/links', { title: 'HAR Hotel - Quarto' }) %>
</head>
<body>
   <div class="container room-page">
      <header>
         <img src="<%=room.image%>" alt="<%=room.name%>">
         <div class="overlay">
            <div class="button-go-back">
               <a href="/quartos">←</a>
            </div>
            <div class="title">
               <h1><%=room.name%></h1>
            </div>
         </div>
      </header>
      <div class="room-content">
         <h2>Descrição</h2>

         <div class="content-container">
            <div class="infos">
               <%infos.forEach(info => { %>
                  <div class="info">
                    <p><%=info%></p>
                  </div>
               <% }) %>
            </div>
            <div class="price">
               <%=room.price%> por noite
            </div>
         </div>

         <div class="images">
            <%images.forEach(image => { %>
               <div class="image">
                  <img src="<%=image.url%>"/>
               </div>
            <% }) %>
            <div class="buttons">
               <button data-button-prev>←</button>
               <button data-button-next>→</button>
            </div>
         </div>
      </div>

      <div class="form">
         <form method="POST" action="/reserva">
            <div class="side-side">
               <div class="input-block">
                  <label for="name">Nome Completo</label>
                  <input type="text" id="name" name="name">
               </div>
            </div>
            
            <div class="side-side">
               <div class="input-block">
                  <label for="birth_date">Data de nascimento</label>
                  <input type="date" id="birth_date" name="birth_date">
               </div>
               <div class="input-block">
                  <label for="cellphone">Celular</label>
                  <input type="text" id="cellphone" name="cellphone">
               </div>
            </div>

            <div class="side-side">
               <div class="input-block">
                  <label for="cpf">CPF</label>
                  <input type="text" id="cpf" name="cpf">
               </div>
               <div class="side-side">
                  <div class="input-block">
                     <label for="adult_number">Nº de adultos</label>
                     <input type="number" id="adult_number" name="adult_number">
                  </div>
                  <div class="input-block">
                     <label for="children_number">Nº de crianças</label>
                     <input type="number" id="children_number" name="children_number">
                  </div>
               </div>
            </div>
            
            <div class="side-side">
               <div class="input-block">
                  <label for="enter_date">Data de Entrada</label>
                  <input type="date" id="enter_date" name="enter_date">
               </div>
               <div class="input-block">
                  <label for="exit_date">Data de Saída</label>
                  <input type="date" id="exit_date" name="exit_date">
               </div>
            </div>

            <div class="input-block">
               <label for="address">Endereço</label>
               <input type="text" id="address" name="address">
            </div>

            <div class="side-side">
               <div class="input-block">
                  <label for="cep">CEP</label>
                  <input type="text" id="cep" name="cep">
               </div>
               <div class="input-block">
                  <label for="uf">UF</label>
                  <input type="text" id="uf" name="uf">
               </div>
            </div>

            <input type="hidden" id="room_id" name="room_id">

            <div class="button">
               <button type="submit">Reserve já</button>
            </div>
         </form>
      </div>
   </div>
   <%- include('parts/footer') %>
</body>
</html>